@model NewsModel

<h2>@Model.Title</h2>
<p>@Model.Content</p>
<p>Date: @Model.Date.ToShortDateString()</p>

<img src="data:image/jpeg;base64,@(Model.ImageDataIMG != null ? Convert.ToBase64String(Model.ImageDataIMG) : "")" alt="News Image" width="100" height="100" />

@using (Html.BeginForm("Delete", "News", new { newsId = Model.NewsId }, FormMethod.Post))
{
    <button type="submit">Delete</button>
}