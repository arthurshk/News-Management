@model NewsModel

@{
    ViewData["Title"] = "Edit News";
}

<h2>Edit News</h2>

<form method="post" action="@Url.Action("Edit", "News")" enctype="multipart/form-data">
    <input type="hidden" name="NewsId" value="@Model.NewsId">

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" class="form-control">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Title)</span>
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" name="Content" class="form-control">@Model.Content</textarea>
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Content)</span>
    </div>

    <div class="form-group">
        <label for="Date">Date</label>
        <input type="text" id="Date" name="Date" value="@Model.Date.ToShortDateString()" class="form-control">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Date)</span>
    </div>

    <div class="form-group">
        <label for="ImageDataIMG">Image</label>
        <input type="file" id="ImageDataIMG" name="ImageDataIMG" accept="image/*" class="form-control-file">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.ImageDataIMG)</span>
        <img src="data:image/jpeg;base64,@(Model.ImageDataIMG != null ? Convert.ToBase64String(Model.ImageDataIMG) : "")" alt="News Image" width="100" height="100" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>