@model List<NewsModel>
<!DOCTYPE html>

<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>

    <h2>News Management</h2>

    <a href="@Url.Action("Create", "News")">Add News</a>

    <table>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Content</th>
            <th>Action</th>
        </tr>
        
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.Title</td>
                <td>@news.Date.ToShortDateString()</td>
                <td>@news.Content</td>
                <td>
                    <a href="@Url.Action("Edit", "News", new { id = news.NewsId })">Edit</a> |
                    <a href="@Url.Action("Delete", "News", new { id = news.NewsId })">Delete</a>
                </td>
            </tr>
        }
    </table>

</body>
</html>